<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.hess.hessandroid.ScheduleActivity">





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showStartTimePickerDialog"
            android:text="PICK START TIME" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="START: "
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showEndTimePickerDialog"
            android:text="PICK END TIME" />


        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="END: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


    <Spinner android:id="@+id/spinnerWeekType"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:drawSelectorOnTop="true"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="#cccccc"
        />

    <Spinner android:id="@+id/spinnerPeakType"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:drawSelectorOnTop="true"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="#cccccc"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendNewScheduleToCloud"
        android:text="SEND TO CLOUD" />


    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TableRow>

        </TableRow>

    </TableLayout>

    <ListView
        android:id="@+id/listViewSchedule"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </ListView>
</LinearLayout>
