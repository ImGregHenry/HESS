<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#9C9E9C"
                android:centerColor="#7B797B"
                android:endColor="#5A5D5A"
                android:angle="270"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/hess_purple"/>
            </shape>
        </clip>
    </item>
</layer-list>